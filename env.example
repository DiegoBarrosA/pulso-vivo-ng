# Environment Configuration for PulsoVivo Angular App
# Copy this file to .env for local development or use for Docker deployment

# Inventory Service Configuration
INVENTORY_SERVICE_URL=http://localhost:8081/api

# Production URLs (uncomment and configure for production)
# INVENTORY_SERVICE_URL=https://your-inventory-service.amazonaws.com/api

# Azure AD B2C Configuration
AZURE_AD_CLIENT_ID=7549ac9c-9294-4bb3-98d6-752d12b13d81
AZURE_AD_AUTHORITY=https://PulsoVivo.b2clogin.com/PulsoVivo.onmicrosoft.com/B2C_1_pulso_vivo_register_and_login
AZURE_AD_REDIRECT_URI=http://localhost:4200
AZURE_AD_POST_LOGOUT_REDIRECT_URI=http://localhost:4200

# Production URLs (uncomment and configure for production)
# AZURE_AD_REDIRECT_URI=https://your-production-domain.com
# AZURE_AD_POST_LOGOUT_REDIRECT_URI=https://your-production-domain.com

# Application Configuration
APP_NAME=PulsoVivo
APP_VERSION=1.0.0
ENABLE_LOGGING=true
LOG_LEVEL=debug

# Production settings (uncomment for production)
# ENABLE_LOGGING=false
# LOG_LEVEL=error

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Store Configuration
ITEMS_PER_PAGE=12
LOW_STOCK_THRESHOLD=10
DEFAULT_CURRENCY=EUR

# Feature Flags
ENABLE_REPORTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_DARK_MODE=false
ENABLE_MULTI_LANGUAGE=false